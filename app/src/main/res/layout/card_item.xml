<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/orillad_redondad_linearlayout"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/orillad_redondad_linearlayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/orillaredondarojo">

            <ImageView
                android:id="@+id/imageViewBorrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/baseline_delete_24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/imageViewBorrar"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="ELIMINAR" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutABorrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="@drawable/orillad_redondad_linearlayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/orillarojo_aceto"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgViewImg1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10sp"
                    android:background="@drawable/imagen_orilla_redonda"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="20dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imgViewImg2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10sp"
                    android:background="@drawable/imagen_orilla_redonda"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="20dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imgViewImg3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10sp"
                    android:background="@drawable/imagen_orilla_redonda"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="20dp"
                    tools:srcCompat="@drawable/baseline_update_24" />

            </LinearLayout>
        </RelativeLayout>




    </androidx.cardview.widget.CardView>


</LinearLayout>